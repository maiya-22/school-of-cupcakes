
 <%@display_class="displayAll"%>
 <div>
  <h1>Students</h1>
  <%= link_to 'New Student', new_student_path %>
 </div>
    <% @students.each do |student| %>
      <div class="personProfileWrap">
        <%= student.first_name %>
        <%= student.last_name %>
        <%= student.person_type%>
        <%= student.pic %>
        <%= student.profile %>
        <%= student.education %>
        <%= student.age %>
        <%= link_to 'Show', student %>
        <%= link_to 'Edit', edit_student_path(student) %>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>







