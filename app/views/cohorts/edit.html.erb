<%@this_location="cohorts"%>
<div id="editCohortWrap">

<div id="editCohortHeader">
  <h1>Edit the <%=@cohort.name%></h1>
</div>

<div id="editCohortBody">
  <div id="editCohortFormWrap">
    <%= render 'edit_cohort_form',cohort: @cohort %>
  </div>

  <div id="removeStudentsFromCohortWrap">
    <p id="allStudentsInCohortHeader">All Students in Cohort: </p>
    <div id="removeStudentsFromCohort">
    <%if @cohort.students.length != 0%>
        <% @cohort.students.each do |student|%>
            <div> 
                <%=student.first_name + " " + student.last_name%>
                <button class="ajaxDelete" id="cohort-<%=@cohort.id%>-student-<%=student.id%>"">x</button>
            </div>
        <%end%>
    <%else%>
            <div> ***  no students yet  ****</div>
    <%end%>
   </div>
  </div>


  <div id="addStudentsToCohortWrap">
        <p>Add Students to Cohort: </p>
        <a href="/students/new">create a student</a>
    <div id="addStudentsToCohort" class="">
      <%Student.all.each do |student|%>
        <%if ! @cohort.students.include?(student) %>
            <div id="<%=student.id%>"><%=student.first_name + " " + student.last_name%>
            <button class="ajaxAdd" id="cohort-<%=@cohort.id%>-student-<%=student.id%>"">add</button>
            </div>
        <%end%>
      <%end%>
    </div>
  </div>





  </div>
  </div>