        <option value="<%=education%>" selected><%=education%></option>
    <%else%>
        <option value="<%=education%>"><%=education%></option>
    <%end%>
  <% end %>
  </select>
</div>

<div class="field">
  <label for="teacher_age">birthday</label>
  <input type="number" name="teacher[age]" id="teacher_age" value="<%=@teacher.age%>" />
</div>

<div class="field">
  <label for="teacher_profile">Profile</label>
  <input type="text" name="teacher[profile]" id="teacher_profile" value="<%=@teacher.profile%>"/>
</div>


<div class="field">
  <label for="teacher_salary">Salary</label>
  <input type="text" name="teacher[salary]" id="teacher_salary" value="<%=@teacher.salary%>" />
</div>

