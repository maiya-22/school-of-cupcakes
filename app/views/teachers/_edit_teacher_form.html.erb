<div class="field">
  <label for="teacher_first_name">First name</label>
  <input type="text" name="teacher[first_name]" id="teacher_first_name" value="<%=@teacher.first_name%>"/>
</div>

<div class="field">
  <label for="teacher_last_name">Last name</label>
  <input type="text" name="teacher[last_name]" id="teacher_last_name" value="<%=@teacher.last_name%>" />
